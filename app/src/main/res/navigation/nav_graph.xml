<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.schedule.startfragment.StartFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_toEnter"
            app:destination="@id/enterFragment" />
    </fragment>
    <fragment
        android:id="@+id/enterFragment"
        android:name="com.example.schedule.auth.EnterFragment"
        android:label="EnterFragment" >
        <action
            android:id="@+id/action_toLogUp"
            app:destination="@id/logUpFragment" />
        <action
            android:id="@+id/action_toLogIn"
            app:destination="@id/logInFragment" />
    </fragment>
    <fragment
        android:id="@+id/logUpFragment"
        android:name="com.example.schedule.auth.LogUpFragment"
        android:label="LogUpFragment" >
        <action
            android:id="@+id/action_logUp_to_logIn"
            app:destination="@id/logInFragment" />
    </fragment>
    <fragment
        android:id="@+id/logInFragment"
        android:name="com.example.schedule.auth.LogInFragment"
        android:label="LogInFragment" />
</navigation>